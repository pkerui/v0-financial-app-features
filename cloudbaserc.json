{
  "version": "2.0",
  "envId": "{{envId}}",
  "$schema": "https://framework-1258016615.tcloudbaseapp.com/schema/latest.json",
  "framework": {
    "name": "finance-manager",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-next",
        "inputs": {
          "buildCommand": "NEXT_PUBLIC_BACKEND=leancloud npm run build",
          "projectPath": ".",
          "functionOptions": {
            "runtime": "Nodejs16.13",
            "memorySize": 512,
            "timeout": 30,
            "envVariables": {
              "NEXT_PUBLIC_BACKEND": "leancloud"
            }
          }
        }
      }
    }
  }
}
